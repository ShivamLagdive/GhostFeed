{
  "manifest_version": 3,
  "name": "GhostFeed â€” YouTube, minus the distractions",
  "description": "Hide Shorts, Home feed, comments, recommendations, and control playback speed.",
  "version": "0.0.2",
  "action": {
    "default_title": "GhostFeed",
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "src/contentScript.js"
      ],
      "css": [
        "src/styles.css"
      ],
      "run_at": "document_start"
    }
  ]
}